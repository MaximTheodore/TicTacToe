            <Style/>
        </Grid.Style>
        <Grid.RowDefinitions>
            <RowDefinition Height="64*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="79*" />
            <RowDefinition Height="84*" />
            <RowDefinition Height="112*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
