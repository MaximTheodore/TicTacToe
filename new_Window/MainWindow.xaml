        <Button x:Name="B5" Content="" Click="Button_Click_2" Margin="1,1,1,1" Grid.Row="2" Grid.Column="1"  />
        <Button x:Name="B6" Content="" Grid.Column="2" Click="Button_Click_2" Margin="1,1,1,1" Grid.Row="2"  />
        <Button x:Name="B7" Content="" Grid.Column="0" Click="Button_Click_2" Margin="1,1,1,1" Grid.Row="3"  />
        <Button x:Name="B8" Content="" Click="Button_Click_2" Margin="1,1,1,1" Grid.Row="3" Grid.Column="1"  />
