        xmlns:local="clr-namespace:new_Window"
        mc:Ignorable="d"
        Title="Крестики нолики" Height="404" Width="250" Background="#FFFCFCFC">

    <Grid  x:Name="XandO" Background="Bisque" AutomationProperties.Name="" Margin="1,0,-3,2" Width="244" Height="404"  >
