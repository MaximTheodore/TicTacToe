            <ColumnDefinition Width="82*" />
            <ColumnDefinition Width="76*" />
            <ColumnDefinition Width="9*" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="Txt" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontFamily="Arial Narrow" FontSize="20" Text="" Margin="1,1,1,65" Grid.RowSpan="2"/>
