        <Button x:Name="B1" Content="" Grid.Column="0" Click="Button_Click_2" Margin="1,1,1,1" Grid.Row="1"  />
        <Button Content="Start" Background="BurlyWood" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" Margin="0,64,0,0" Grid.RowSpan="2" Click="Button_Click"></Button>
        <Button x:Name="B2" Content="" Grid.Column="1" Click="Button_Click_2" Margin="1,1,1,1" Grid.Row="1"  />
